<form method="post" action="{{ path('documento_delete', {'idDocumento': documento.idDocumento}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ documento.idDocumento) }}">
    <button class="btn">Delete</button>
</form>
